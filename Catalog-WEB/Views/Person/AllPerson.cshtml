@model IEnumerable<Catalog_DataAccessLayer.Models.Person>
@{
    ViewBag.Title = "Index";
}


<h2 class="text-primary">All Person List</h2>

<div class="text-end">
     <a  asp-controller ="Person" asp-action="AddNewPerson" class="btn btn-primary">
           <i class="bi bi-plus-lg"></i> &nbsp Create New Person
       </a>
</div>


<table style="width:100%" class="table table-boredered table-striped">
    <thead>
        <tr>
            <th>
              First Name
            </th>
            <th>
             Last Name
            </th>
            <th>
               Email Address
            </th> 
             <th>
                Action
            </th> 
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.FirstName
            </td>
            <td>
              @item.LastName
            </td>
            <td>
                @item.Email_Address
            </td>
             <td>
                 <div class="rounded-pill btn-group" >
                        <a asp-controller="Person" asp-action="UpdatePerson" asp-route-id="@item.PersonID" class="btn alert-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Person" asp-action="DeletePerson" asp-route-id="@item.PersonID" class="btn alert-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                 </div>
            

            </td>
        </tr>

    }

</table>